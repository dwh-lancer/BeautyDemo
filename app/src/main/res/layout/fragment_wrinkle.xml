<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.neu.beautydemo.view.CameraFrameView
        android:visibility="gone"
        android:id="@+id/customRect"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <ImageView
        android:visibility="gone"
        android:id="@+id/scanHorizontalLineImageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/horizontal_line" />
    <ImageView
        android:id="@+id/img_face_wrinkle"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <!--人脸左侧区域-->
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1.2"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:visibility="gone"
                    android:layout_weight="1"
                    android:src="@mipmap/man4"
                    android:padding="20dp"
                    android:id="@+id/img_wrinkle_head"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/txt_wrinkle_head"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout

                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:visibility="gone"
                    android:layout_weight="1"
                    android:src="@mipmap/man1"
                    android:padding="20dp"
                    android:id="@+id/img_wrinkle_eye"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/txt_wrinkle_left_eye"
                    android:gravity="center"
                    android:text=""
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>
            <LinearLayout

                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:visibility="gone"
                    android:layout_weight="1"
                    android:src="@mipmap/man5"
                    android:padding="20dp"
                    android:id="@+id/img_wrinkle_left_pouch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/txt_wrinkle_left_pouch"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout

                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:visibility="gone"
                    android:layout_weight="1"
                    android:src="@mipmap/man5"
                    android:padding="20dp"
                    android:id="@+id/img_wrinkle_pouch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/txt_wrinkle_left_face"
                    android:gravity="center"
                    android:text=""
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>




            <ImageView
                android:visibility="gone"
                android:padding="20dp"
                android:layout_weight="1"
                android:id="@+id/img_wrinkle2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <ImageView
                android:visibility="gone"
                android:padding="20dp"
                android:layout_weight="1"
                android:id="@+id/img_wrinkle3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <!--中间的人脸-->
        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </RelativeLayout>

        <!--人脸右侧区域-->
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="1.2"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text=""
                android:textColor="@color/white"
                android:textSize="20sp"
                android:gravity="center"
                android:layout_weight="1"
                android:id="@+id/txt_right_eye"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:text=""
                android:textColor="@color/white"
                android:textSize="20sp"
                android:gravity="center"
                android:layout_weight="1"
                android:id="@+id/txt_right_pouch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:text=""
                android:textColor="@color/white"
                android:textSize="20sp"
                android:gravity="center"
                android:layout_weight="1"
                android:id="@+id/txt_right_face"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="100dp"
            android:layout_height="match_parent">
            <TextView
                android:visibility="gone"
                android:text="检测"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:gravity="center"
                android:id="@+id/img_takePicWrinkle"
                android:layout_width="match_parent"
                android:layout_height="100dp" />
            <TextView
                android:text="重新检测"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:gravity="center"
                android:id="@+id/img_clearPicWrinkle"
                android:layout_width="match_parent"
                android:layout_height="100dp" />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>
